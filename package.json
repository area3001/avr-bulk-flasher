{
  "name": "avr-bulk-flasher",
  "version": "1.0.1",
  "description": "For when you need to flash a lot of AVR devices with Arduino as ISP. Requires avrdude te be installed.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npm run build:clean && npm run build:windows && npm run build:macos && npm run build:linux",
    "build:clean": "rimraf build",
    "build:windows": "pkg index.js -t node16-win-x64 -o build/avr-bulk-flasher_v$(project-version)_win.exe",
    "build:macos": "pkg index.js -t node16-macos-x64 -o build/avr-bulk-flasher_v$(project-version)_macos",
    "build:linux": "pkg index.js -t  node16-linux-x64 -o build/avr-bulk-flasher_v$(project-version)_linux"
  },
  "keywords": [
    "avr",
    "arduino",
    "isp",
    "flasher",
    "fri3d"
  ],
  "author": "Sebastiaan Jansen - DrSkunk",
  "license": "ISC",
  "bin": "index.js",
  "dependencies": {
    "minimist": "^1.2.6",
    "serialport": "^10.4.0"
  },
  "devDependencies": {
    "jest": "^28.1.2",
    "pkg": "^5.7.0",
    "project-version": "^2.0.0",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
